<Header>
  <img
    class="header__logo"
    src="assets/images/logo.png"
    alt="Tomstagram logo"
  >
</Header>

<main class="container__main">
  {{#if model.posts.isSettled}}
    {{#each model.posts.content as |post|}}
      <Post @post={{post}} />
    {{/each}}
  {{else}}
    Loading
  {{/if}}
</main>

<Footer>
  {{#link-to "new"}}
    <Icons as |Icon|>
      <Icon.PlusSquare />
    </Icons>
  {{/link-to}}
</Footer>
